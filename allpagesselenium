        driver.findElement(By.xpath(".//*[@id='send_email']")).click();
        
        //click the submit button by entering email without name
        driver.findElement(By.xpath(".//*[@id='to']")).sendKeys("cherupallygopi@gmail.com");
        driver.findElement(By.xpath(".//*[@id='send_email']")).click();
        
        //click the submit butoon by entering details
        driver.findElement(By.xpath(".//*[@id='form1']")).sendKeys("Gopinadh");
        driver.findElement(By.xpath(".//*[@id='to']")).sendKeys("cherupallygopi@gmail.com");
        driver.findElement(By.xpath(".//*[@id='send_email']")).click();
        
        //click on download mobile app link
        driver.findElement(By.xpath("html/body/main/div/div/div/div[3]/div[1]/div/div")).click();
        
        //click on host link
        driver.findElement(By.xpath("html/body/main/div/div/div/div[3]/div[1]/div/div/div[2]/p/a")).click();
        
