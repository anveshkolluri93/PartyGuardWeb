     // homepage   
        WebDriver driver = new FirefoxDriver();
//        open partyguard website
	driver.get("localhost:8080");
//        maximize the window
	driver.manage().window().maximize();
//        click the login button
	driver.findElement(By.xpath(".//*[@id='collapseEx2']/form/a")).click();
        
