package guard.user;

/**
 *
 * @author S524988
 */
public class Guardlogin {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
         WebDriver driver = new FirefoxDriver();
        open partyguard website
	driver.get("localhost:8080");
        maximize the window
	driver.manage().window().maximize();
        click the login button
	driver.findElement(By.xpath(".//*[@id='collapseEx2']/form/a")).click();
        
        enter the correct username and password for basic user        
        WebElement id = driver.findElement(By.id("form41"));
        WebElement pass = driver.findElement(By.id("form41"));
        WebElement button = driver.findElement(By.id("Button"));
        id.sendKeys("lokeshlok@gmail.com");
        pass.sendKeys("Lokesh@2");
        button.click();
        
        Click the login button directly without entering username and password
                WebElement id = driver.findElement(By.id("form41"));
        WebElement pass = driver.findElement(By.id("form41"));
        WebElement button = driver.findElement(By.id("Button"));
        id.sendKeys("");
        pass.sendKeys("");
        button.click();
        
        enter the username and leave the password blank
        WebElement id = driver.findElement(By.id("form41"));
        WebElement pass = driver.findElement(By.id("form41"));
        WebElement button = driver.findElement(By.id("Button"));
        id.sendKeys("lokeshlok@gmail.com");
        pass.sendKeys("");
        button.click();
        
        enter the password and leave the username blank
         WebElement id = driver.findElement(By.id("form41"));
        WebElement pass = driver.findElement(By.id("form41"));
        WebElement button = driver.findElement(By.id("Button"));
        id.sendKeys("lokeshlok@gmail.com");
        pass.sendKeys("");
        button.click();
       
        enter the incorrect username and correct password
         WebElement id = driver.findElement(By.id("form41"));
        WebElement pass = driver.findElement(By.id("form41"));
        WebElement button = driver.findElement(By.id("Button"));
        id.sendKeys("lokesh");
        pass.sendKeys("Lokesh@2");
        button.click();
        
         enter the correct username and incorrect password
         WebElement id = driver.findElement(By.id("form41"));
        WebElement pass = driver.findElement(By.id("form41"));
        WebElement button = driver.findElement(By.id("Button"));
        id.sendKeys("lokesh");
        pass.sendKeys("Welcome");
        button.click();
        
        
        enter the incorrect username and incorrect password
        WebElement id = driver.findElement(By.id("form41"));
        WebElement pass = driver.findElement(By.id("form41"));
        WebElement button = driver.findElement(By.id("Button"));
        id.sendKeys("lokesh");
        pass.sendKeys("Welcome");
        button.click();
        
        register as a guard link
        driver.findElement(By.xpath(".//*[@id='page-content-wrapper']/div/div[3]/div/a")).click();
       
        sign up link
        driver.findElement(By.xpath(".//*[@id='page-content-wrapper']/div/div[5]/div/div/div/p[1]/a")).click();
        
        forgot password link
        driver.findElement(By.xpath(".//*[@id='page-content-wrapper']/div/div[5]/div/div/div/p[2]/a")).click();
    }
    
}
