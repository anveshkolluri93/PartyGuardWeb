package partyguard;

import java.util.List;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;

/**
 *
 * @author S524988
 */
public class registrationpage {
    
    WebDriver driver = new FirefoxDriver();
//        open partyguard website
	driver.get("localhost:8080");
//        maximize the window
	driver.manage().window().maximize();
//        click the login button
	driver.findElement(By.xpath(".//*[@id='collapseEx2']/form/a")).click();
        
// click register as a guard button
        driver.findElement(By.xpath(".//*[@id='page-content-wrapper']/div/div[3]/div/a")).click();

// registration page text fields
         String[] textToInput = {"Gopinadh, Cherupally, gopi, cherupallygopi@gmail.com, 6606513888, gopinadh456, 25 "};

List<WebElement> elements =  driver.findElements(By.xpath(".//*[@id='form41']"));

System.out.println("size is "+elements.size());

for(int i = 0; i < elements.size(); i++){
        elements.get(i).sendKeys(textToInput[i]);
    }
        driver.findElement(By.xpath(".//*[@id='page-content-wrapper']/div/div[3]/div/button")).click();

    }
//contact partyguard link
	driver.findElement(By.xpath("html/body/footer/div[1]/div/div[1]/p")).click();
		
//about partyguard link
	driver.findElement(By.xpath("html/body/footer/div[1]/div/div[2]/ul/li[1]/a")).click();
		
//employment
	driver.findElement(By.xpath("html/body/footer/div[1]/div/div[2]/ul/li[2]/a")).click();
		
//maps and directions
	driver.findElement(By.xpath("html/body/footer/div[1]/div/div[2]/ul/li[3]/a")).click();
		
//emergency information
	driver.findElement(By.xpath("html/body/footer/div[1]/div/div[2]/ul/li[4]/a")).click();
        
//register as a guard button
        driver.findElement(By.xpath(".//*[@id='page-content-wrapper']/div/div[3]/div/a")).click();
}
